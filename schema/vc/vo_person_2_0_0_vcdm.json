{
    "$id":"https://refeds.org/schemas/vc/vo_person_2_0_0_vcdm.json",
    "$schema":"https://json-schema.org/draft/2020-12/schema",
    "$comment":"This schema implements voPerson version 2.0.0 (19 May 2022) - https://refeds.org/specifications/voperson - This schema is maintained by REFEDs (https://refeds.org). The mission of REFEDS (the Research and Education FEDerations group) is to be the voice that articulates the mutual needs of research and education identity federations worldwide.",
    "title":"voPersonCredentials",
    "description":"Schema for verifiable credential claims describing a user in the context of voPerson",
    "type":"object",
    "properties":{
        "credentialSubject":{
            "type":"object",
            "properties":{
                "voperson_application_uid":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.1",
                    "description":"voPerson Application-Specific User Identifier"
                },
                "voperson_author_name":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.2",
                    "description":"voPerson Author Name"
                },
                "voperson_certificate_dn":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.3",
                    "description":"voPerson Certificate Distinguished Name"
                },
                "voperson_certificate_issuer_dn":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.4",
                    "description":"voPerson Certificate Issuer DN"
                },
                "voperson_external_id":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.5",
                    "description":"voPerson Scoped External Identifier"
                },
                "voperson_id":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.6",
                    "description":"voPerson Unique Identifier"
                },
                "voperson_policy_agreement":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.7",
                    "description":"voPerson Policy Agreement Indicator"
                },
                "voperson_sor_id":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.8",
                    "description":"voPerson External Identifier"
                },
                "voperson_status":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.9",
                    "description":"voPerson Status"
                },
                "voperson_affiliation":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.10",
                    "description":"voPerson Affiliation Within Local Scope",
                    "pattern":"^\\S+@\\S+\\.\\S+$"
                },
                "voperson_external_affiliation":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.11",
                    "description":"voPerson Scoped External Affiliation",
                    "pattern":"^\\S+@\\S+\\.\\S+$"
                },
                "voperson_scoped_affiliation":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.12",
                    "description":"voPerson Affiliation With Explicit Local Scope",
                    "pattern":"^\\S+@\\S+\\.\\S+$"
                },
                "voperson_application_password":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.13",
                    "description":"voPerson Application-Specific Password"
                },
                "voperson_verified_email":{
                    "type":"email",
                    "oid":"1.3.6.1.4.1.25178.4.1.14",
                    "description":"voPerson Verified Email Address"
                },
                "voperson_token":{
                    "type":"string",
                    "oid":"1.3.6.1.4.1.25178.4.1.15",
                    "description":"voPerson Token"
                }
            }
        }
    }
}